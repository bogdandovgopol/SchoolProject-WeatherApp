<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.AddLocationActivity"
        android:background="@color/blackShade"
        android:paddingTop="25dp">

    <TextView
            android:text="Enter city name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.38" android:fontFamily="@font/roboto_light"
            android:textSize="25sp" android:textColor="@android:color/white"/>
    <TextView
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/locationNameTxt"
            android:fontFamily="@font/roboto_light" android:textSize="25sp"
            android:textColor="@android:color/white"
            android:textAlignment="textStart"
            android:backgroundTint="@android:color/white" android:background="#80FFFFFF"
            android:layout_width="0dp"
            app:layout_constraintEnd_toStartOf="@+id/searchLocationBtn" android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.506"
            android:layout_marginEnd="8dp"/>
    <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/searchLocationBtn"
            android:background="@drawable/plus"
            app:layout_constraintTop_toTopOf="@+id/locationNameTxt"
            app:layout_constraintBottom_toBottomOf="@+id/locationNameTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:id="@+id/backToLocationListBtn"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:background="@drawable/burger"/>
</android.support.constraint.ConstraintLayout>